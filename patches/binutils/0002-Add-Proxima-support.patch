Subject: [PATCH 2/2] Add Proxima support

---
 bfd/config.bfd    | 5 +++++
 gas/configure.tgt | 1 +
 ld/configure.tgt  | 3 +++
 3 files changed, 9 insertions(+)

diff --git a/bfd/config.bfd b/bfd/config.bfd
index 0d790117..e0e4221c 100644
--- a/bfd/config.bfd
+++ b/bfd/config.bfd
@@ -735,6 +735,11 @@ case "${targ}" in
     targ_selvecs="i386_elf32_vec iamcu_elf32_vec x86_64_elf32_vec"
     want64=true
     ;;
+  x86_64-*-hydrogen*)
+    targ_defvec=x86_64_elf64_vec
+    targ_selvecs=i386_elf32_vec
+    want64=true
+    ;;
 #endif
   i[3-7]86-*-lynxos*)
     targ_defvec=i386_elf32_vec
diff --git a/gas/configure.tgt b/gas/configure.tgt
index 7c81bffa..9b214f70 100644
--- a/gas/configure.tgt
+++ b/gas/configure.tgt
@@ -242,6 +242,7 @@ case ${generic_target} in
       x86_64*-linux-gnux32)		arch=x86_64:32 ;;
     esac ;;
   i386-*-lynxos*)			fmt=elf em=lynx ;;
+  i386-*-hydrogen*)			fmt=elf ;;
   i386-*-redox*)			fmt=elf ;;
   i386-*-solaris*)			fmt=elf em=solaris ;;
   i386-*-freebsd* \
diff --git a/ld/configure.tgt b/ld/configure.tgt
index ea01ccf9..74f9fc52 100644
--- a/ld/configure.tgt
+++ b/ld/configure.tgt
@@ -1016,6 +1016,9 @@ x86_64-*-linux-*)	targ_emul=elf_x86_64
 			targ_extra_libpath="elf_i386 elf32_x86_64"
 			tdir_elf_i386=`echo ${targ_alias} | sed -e 's/x86_64/i386/'`
 			;;
+x86_64-*-hydrogen*)	targ_emul=elf_x86_64
+			targ_extra_emuls=elf_i386
+			;;
 x86_64-*-redox*)	targ_emul=elf_x86_64
 			targ_extra_emuls=elf_i386
 			;;
