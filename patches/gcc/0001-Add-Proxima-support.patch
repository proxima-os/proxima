 *-*-fuchsia*)
   native_system_header_dir=/include
   tmake_file="t-fuchsia"
@@ -2320,6 +2329,17 @@ i[34567]86-*-mingw* | x86_64-*-mingw*)
 			;;
 	esac
 	;;
+x86_64-*-hydrogen*)
+	tm_file="${tm_file} i386/unix.h i386/att.h elfos.h glibc-stdint.h i386/i386elf.h i386/x86-64.h"
+
+	case ${target} in
+		*-plibc*)
+			tm_file="${tm_file} plibc.h i386/plibc.h"
+			;;
+	esac
+
+	tm_file="${tm_file} hydrogen.h"
+	;;
 x86_64-*-fuchsia*)
 	tmake_file="${tmake_file} i386/t-x86_64-elf"
 	tm_file="${tm_file} i386/unix.h i386/att.h elfos.h newlib-stdint.h i386/i386elf.h i386/x86-64.h fuchsia.h"
diff --git a/gcc/config/hydrogen.h b/gcc/config/hydrogen.h
new file mode 100644
index 000000000..e38d447c3
--- /dev/null
+++ b/gcc/config/hydrogen.h
@@ -0,0 +1,25 @@
+#undef TARGET_HYDROGEN
+#define TARGET_HYDROGEN 1
+
+#if TARGET_PLIBC
+#define HYDROGEN_BASE_LINK_SPEC PLIBC_LINK_SPEC
+#define HYDROGEN_STATIC_SPEC "static|static-pie"
+#define HYDROGEN_LIBC_DEFINE() builtin_define("__plibc__")
+#else
+#error "unknown libc"
+#endif
+
+/* if -static without -nostdlib, pass -lhydrogen *before* -static so that ld is allowed to use the shared version */
+#undef LINK_SPEC
+#define LINK_SPEC "%{" HYDROGEN_STATIC_SPEC ": %{!nostdlib: -lhydrogen}} " HYDROGEN_BASE_LINK_SPEC
+
+#undef TARGET_OS_CPP_BUILTINS
+#define TARGET_OS_CPP_BUILTINS()            \
+    do {                                    \
+        HYDROGEN_LIBC_DEFINE();             \
+        builtin_define("__hydrogen__");     \
+        builtin_define("__unix__");         \
+        builtin_assert("system=hydrogen");  \
+        builtin_assert("system=unix");      \
+        builtin_assert("system=posix");     \
+    } while (0);
