Date: Sat, 19 Apr 2025 12:58:00 +0200
Subject: [PATCH] Add Proxima support

---
 fixincludes/mkfixinc.sh     |  1 +
 gcc/config.gcc              | 12 ++++++++++++
 gcc/config/i386/proxima.h   |  8 ++++++++
 gcc/config/proxima.h        | 38 +++++++++++++++++++++++++++++++++++++
 gcc/config/proxima.opt      | 29 ++++++++++++++++++++++++++++
 gcc/config/proxima.opt.urls |  5 +++++
 libgcc/config.host          |  8 ++++++++
 libstdc++-v3/crossconfig.m4 |  7 +++++++
 8 files changed, 108 insertions(+)
 create mode 100644 gcc/config/i386/proxima.h
 create mode 100644 gcc/config/proxima.h
 create mode 100644 gcc/config/proxima.opt
 create mode 100644 gcc/config/proxima.opt.urls

diff --git a/fixincludes/mkfixinc.sh b/fixincludes/mkfixinc.sh
index df90720b7..214870468 100755
--- a/fixincludes/mkfixinc.sh
+++ b/fixincludes/mkfixinc.sh
@@ -13,6 +13,7 @@ target=fixinc.sh
 case $machine in
     i?86-*-cygwin* | \
     i?86-*-mingw32* | \
+    *-proxima* | \
     x86_64-*-mingw32* | \
     powerpc-*-eabisim* | \
     powerpc-*-eabi*    | \
diff --git a/gcc/config.gcc b/gcc/config.gcc
index 95c91ee02..494062143 100644
--- a/gcc/config.gcc
+++ b/gcc/config.gcc
@@ -878,6 +878,15 @@ case ${target} in
   rust_target_objs="${rust_target_objs} freebsd-rust.o"
   target_has_targetrustm=yes
   ;;
+*-*-proxima*)
+  extra_options="$extra_options proxima.opt"
+  gas=yes
+  gnu_ld=yes
+  default_use_cxa_atexit=yes
+  default_gnu_indirect_function=yes
+  use_gcc_stdint=provide
+  tmake_file="${tmake_file} t-slibgcc"
+  ;;
 *-*-fuchsia*)
   native_system_header_dir=/include
   tmake_file="t-fuchsia"
@@ -2284,6 +2293,9 @@ i[34567]86-*-mingw* | x86_64-*-mingw*)
 			;;
 	esac
 	;;
+x86_64-*-proxima*)
+	tm_file="${tm_file} i386/unix.h i386/att.h elfos.h glibc-stdint.h i386/i386elf.h i386/x86-64.h proxima.h i386/proxima.h"
+	;;
 x86_64-*-fuchsia*)
 	tmake_file="${tmake_file} i386/t-x86_64-elf"
 	tm_file="${tm_file} i386/unix.h i386/att.h elfos.h newlib-stdint.h i386/i386elf.h i386/x86-64.h fuchsia.h"
diff --git a/gcc/config/i386/proxima.h b/gcc/config/i386/proxima.h
new file mode 100644
index 000000000..ca68f09f8
--- /dev/null
+++ b/gcc/config/i386/proxima.h
@@ -0,0 +1,8 @@
+#undef ENDFILE_SPEC
+#define ENDFILE_SPEC                                                                                                   \
+    "%{mdaz-ftz:crtfastmath.o%s;Ofast|ffast-math|funsafe-math-optimizations:%{!shared:%{!mno-daz-ftz:crtfastmath.o%s}" \
+    "}}"                                                                                                               \
+    " %{mpc32:crtprec32.o%s}"                                                                                          \
+    " %{mpc64:crtprec64.o%s}"                                                                                          \
+    " %{mpc80:crtprec80.o%s}"                                                                                          \
+    " " PROXIMA_ENDFILE_SPEC
diff --git a/gcc/config/proxima.h b/gcc/config/proxima.h
new file mode 100644
index 000000000..e83e5db1c
--- /dev/null
+++ b/gcc/config/proxima.h
@@ -0,0 +1,38 @@
+#undef TARGET_PROXIMA
+#define TARGET_PROXIMA 1
+
+#undef LIB_SPEC
+#define LIB_SPEC "-lc"
+
+/* if -static without -nostdlib, pass -lhydrogen *before* -static so that ld is allowed to use the shared version */
+#undef LINK_SPEC
+#define LINK_SPEC                                                                       \
+    "%{shared:-shared}"                                                                 \
+    " %{static: %{!nostdlib: -lhydrogen} -static --no-dynamic-linker -z text}"          \
+    " %{static-pie: %{!nostdlib: -lhydrogen} -static -pie --no-dynamic-linker -z text}" \
+    " %{!shared: %{!static: %{rdynamic:-export-dynamic}}}"
+
+#undef LINK_EH_SPEC
+#define LINK_EH_SPEC "%{!static|static-pie:--eh-frame-hdr} "
+
+#undef STARTFILE_SPEC
+#define STARTFILE_SPEC     \
+    "%{!shared: crt0.o%s}" \
+    " crti.o%s"            \
+    " %{shared|static-pie|" PIE_SPEC ":crtbeginS.o%s;:crtbegin.o%s}"
+
+#define PROXIMA_ENDFILE_SPEC                                    \
+    "%{shared|static-pie|" PIE_SPEC ":crtendS.o%s;:crtend.o%s}" \
+    " crtn.o%s"
+#undef ENDFILE_SPEC
+#define ENDFILE_SPEC PROXIMA_ENDFILE_SPEC
+
+#undef TARGET_OS_CPP_BUILTINS
+#define TARGET_OS_CPP_BUILTINS()          \
+    do {                                  \
+        builtin_define("__proxima__");    \
+        builtin_define("__unix__");       \
+        builtin_assert("system=proxima"); \
+        builtin_assert("system=unix");    \
+        builtin_assert("system=posix");   \
+    } while (0);
