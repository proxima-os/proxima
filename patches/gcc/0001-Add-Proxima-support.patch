+++ b/gcc/config/plibc.h
@@ -0,0 +1,28 @@
+#undef TARGET_PLIBC
+#define TARGET_PLIBC 1
+
+#undef LIB_SPEC
+#define LIB_SPEC "-lc"
+
+#define PLIBC_LINK_SPEC                                        \
+    "%{shared:-shared}"                                        \
+    " %{static: -static --no-dynamic-linker -z text}"          \
+    " %{static-pie: -static -pie --no-dynamic-linker -z text}" \
+    " %{!shared: %{!static: %{rdynamic:-export-dynamic}}}"
+#undef LINK_SPEC
+#define LINK_SPEC PLIBC_LINK_SPEC
+
+#undef LINK_EH_SPEC
+#define LINK_EH_SPEC "%{!static|static-pie:--eh-frame-hdr} "
+
+#undef STARTFILE_SPEC
+#define STARTFILE_SPEC     \
+    "%{!shared: crt0.o%s}" \
+    " crti.o%s"            \
+    " %{shared|static-pie|" PIE_SPEC ":crtbeginS.o%s;:crtbegin.o%s}"
+
+#define PLIBC_ENDFILE_SPEC                                      \
+    "%{shared|static-pie|" PIE_SPEC ":crtendS.o%s;:crtend.o%s}" \
+    " crtn.o%s"
+#undef ENDFILE_SPEC
+#define ENDFILE_SPEC PLIBC_ENDFILE_SPEC
